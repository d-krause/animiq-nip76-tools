{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "ES2022",
            "ESNext",
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist",
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false,
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "emitDeclarationOnly": false,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "."
    },
    "include": [
        "src/index.ts"
    ]
}